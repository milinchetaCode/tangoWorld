// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String
  name         String
  surname      String
  city         String
  gender       String        // "male", "female"
  dietaryNeeds String?
  role            String        @default("user") // "user", "organizer", "admin"
  organizerStatus String        @default("none") @map("organizer_status") // "none", "pending", "approved"
  createdAt       DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  events       Event[]
  applications Application[]

  @@map("users")
}

model Event {
  id             String        @id @default(uuid())
  title          String
  startDate      DateTime
  endDate        DateTime
  location       String
  latitude       Float?
  longitude      Float?
  venue          String
  imageUrl       String?
  guests         String?
  djs            String?
  schedule       String?
  capacity       Int
  maleCapacity   Int
  femaleCapacity Int
  organizer      User          @relation(fields: [organizerId], references: [id])
  organizerId    String
  status         String        @default("published") // "draft", "published", "cancelled"
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  applications   Application[]

  @@map("events")
}

model Application {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  event       Event    @relation(fields: [eventId], references: [id])
  eventId     String
  status      String   @default("applied") // "applied", "accepted", "waitlisted", "rejected", "cancelled"
  paymentDone Boolean  @default(false)
  appliedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, eventId])
  @@map("applications")
}
